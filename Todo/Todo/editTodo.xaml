<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo.editTodo"
             Title="Edit todo">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Title:" FontSize="30" FontAttributes="Bold"/>
            <Entry x:Name="titleEntry" Text="{Binding title}"/>

            <Label Text="Description:" FontSize="30" FontAttributes="Bold" />
            <Entry x:Name="descriptionEntry" Text="{Binding description}" />

            <Button Text="Save" Clicked="OnSaveClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>